extends ../layout

block content
    h1= title

    include error

    form(action="/books/" + book.id + "/update", method="post")
        include form
        p
            input(type="submit" value="Update Book")
        p
            a(href="/books" class="button") Cancel
    p
        a.delete-button(type="button", data-toggle='modal', data-target='#deleteBookModal') Delete Book

        #deleteBookModal.modal.fade
            .modal-dialog
                .modal-content
                    form(action="/books/" + book.id + "/delete", method="post")
                        .modal-header Delete "#{book.title}" by #{book.author}?
                        .modal-footer
                            button.delete-button(type="submit", value="") Delete Book
                            button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
